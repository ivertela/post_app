<table>
  <thead>
    <tr>
      <th>User Email</th>
      <th>Title</th>
      <th>Description</th>
      <th>State</th>
      <th>Deleted_at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= post.user.email %></td>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= post.aasm_state %></td>
        <td><%= post.deleted_at %></td>
        <td><%= post.pending? ? (link_to 'Published', published_path(post_id: post.id), method: :post) : "Published" %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>